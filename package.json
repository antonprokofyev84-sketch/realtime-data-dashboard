{
  "name": "realtime-data-dashboard",
  "private": true,
  "scripts": {
    "install:client": "npm install --prefix client",
    "install:server": "npm install --prefix server",
    "install:all": "npm run install:client && npm run install:server",
    "dev:client": "npm run dev --prefix client",
    "start:server": "npm run start --prefix server",
    "wait:server": "wait-on tcp:4000",
    "start:all": "concurrently --kill-others-on-fail \"npm run start:server\" \"npm run wait:server && npm run dev:client\"",
    "build:client": "npm run build --prefix client",
    "preview:client": "npm run preview --prefix client",
    "lint:client": "npm run lint --prefix client",
    "test:client": "npm run test --prefix client",
    "install": "npm run install:all",
    "dev": "npm run dev:client",
    "build": "npm run build:client",
    "preview": "npm run preview:client",
    "lint": "npm run lint:client",
    "test": "npm run test:client",
    "start": "npm run start:all"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "wait-on": "^8.0.1"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "zod": "^4.3.6"
  }
}
